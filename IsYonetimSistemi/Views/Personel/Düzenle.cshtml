@model IsYonetimSistemi.Models.Personel

@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/yoneticiPanel.cshtml";
}

<h2>Düzenle</h2>

@using (Html.BeginForm())
{
