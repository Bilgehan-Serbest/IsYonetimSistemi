@model IsYonetimSistemi.Models.Izin
@using IsYonetimSistemi.Models;
@{
    ViewBag.Title = "IzinDuzenleme";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

<h2>İzin Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>İzin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.izin_id)

        <div class="form-group">
            @Html.LabelFor(model => model.izin_sebebi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.izin_sebebi, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.izin_sebebi, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.izin_baslangic_tarihi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.izin_baslangic_tarihi, new { htmlAttributes = new { @type = "text", @class = "form-control", @style = "width: 50%;", @id = "izinBaslangicTarih", @name = "izinBaslangicTarih" } })
                @Html.ValidationMessageFor(model => model.izin_baslangic_tarihi, "", new { @class = "text-danger" })
                @*<input type="text" class="form-control" style="width: 50%" id="izinBaslangicTarih" name="izinBaslangicTarih" />*@
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.izin_bitis_tarihi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.izin_bitis_tarihi, new { htmlAttributes = new { @type = "text", @class = "form-control", @style = "width: 50%;", @id = "izinBitisTarih", @name = "izinBitisTarih" } })
                @Html.ValidationMessageFor(model => model.izin_bitis_tarihi, "", new { @class = "text-danger" })
                @*<input type="text" class="form-control" style="width: 50%" id="izinBitisTarih" name="izinBitisTarih" />*@
            </div>
        </div>

        <div class="container">
            <button type="button" style="margin-left:20px" class="btn btn-default" data-target="#personelSecModal" data-toggle="modal">Izin Verilecek Personel Seçimi</button>
            <div class="modal" id="personelSecModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button class="close" data-dismiss="modal">&times;</button>
                            <h4>Personel Seçimi</h4>
                        </div>
                        <div class="modal-body">
                            <p>Lütfen izin verilecek personelleri seçiniz.</p>

                            <table class="table">
                                <tr>
                                    <th>
                                        İzin Ver
                                    </th>
                                    <th>
                                        Ad
                                    </th>
                                    <th>
                                        Soyad
                                    </th>
                                    <th></th>
                                </tr>
                                @{ Model.yonetici_id = Convert.ToInt32(Session["yoneticiID"]);}
                                @Html.HiddenFor(model => model.yonetici_id)
                                @{ int i = 0;
                                    int girisYapanYoneticiID = Convert.ToInt32(Session["YoneticiID"]);}
                                @{ using (IsYonetimDBEntities dbModel = new IsYonetimDBEntities())
                                    {
                                        var girisYapanYonetici = dbModel.Yoneticis.Where(x => x.kullanici_id == girisYapanYoneticiID).FirstOrDefault();
                                        Model.Yonetici = new Yonetici()
                                        {
                                            kullanici_id = girisYapanYonetici.kullanici_id,
                                            kullanici_adi = girisYapanYonetici.kullanici_adi,
                                            ad = girisYapanYonetici.ad,
                                            soyad = girisYapanYonetici.soyad,
                                            email = girisYapanYonetici.email,
                                            maas = girisYapanYonetici.maas
                                        };
                                    }
                                }
                                @foreach (var personel in ViewBag.personelListesi)
                                {
                                    //Model.personelViewModels.Add((IsYonetimSistemi.Models.Personel)personel);
                                    <tr>
                                        <td>
                                            <input type="radio" name="PersonelID" value="@personel.kullanici_id" />
                                            @*@Html.CheckBoxFor(model => model.personelViewModels[i].gorevChecked)*@

                                            @*@{ Model.gorevlendirmeViewModel.personel_id = personel.kullanici_id;}
                                                @Html.HiddenFor(model => model.gorevlendirmeViewModel.personel_id)*@
                                        </td>

                                        <td>
                                            @personel.ad
                                        </td>

                                        <td>
                                            @personel.soyad
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </table>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Izin Duzenle" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-success">@ViewBag.SuccessMessage</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-danger">@ViewBag.DuplicateMessage</label>
                </div>
            </div>
        </div>
        <br />


    </div>
                                    }

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('#izinBaslangicTarih').datepicker({
            format: 'yyyy-mm-dd'
        });
    })
</script>
<script>
    $(document).ready(function () {
        $('#izinBitisTarih').datepicker({
            format: 'yyyy-mm-dd'
        });
    })
</script>


<div>
    @Html.ActionLink("İzin Listesine Dön", "IzinListeleme")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
