@model IsYonetimSistemi.Models.IsYonetim
@using IsYonetimSistemi.Models;

@{
    ViewBag.Title = "GorevAtama";
    Layout = "~/Views/Shared/_mainView.cshtml";    
    if (Session["yoneticiID"] == null)
    {
        Response.Redirect("~/YoneticiGiris/YoneticiGiris");
    }

}

<h2>Görev Atama</h2>

@using (Html.BeginForm("GorevAtama", "Gorev", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.gorevlendirmeViewModel.gorev_adi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.gorevlendirmeViewModel.gorev_adi, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.gorevlendirmeViewModel.gorev_adi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.gorevlendirmeViewModel.gorev_tanimi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.gorevlendirmeViewModel.gorev_tanimi, new { htmlAttributes = new { @class = "form-control", @style = "width: 50%;" } })
                @Html.ValidationMessageFor(model => model.gorevlendirmeViewModel.gorev_tanimi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="container">
            <button type="button" style="margin-left:20px" class="btn btn-default" data-target="#personelSecModal" data-toggle="modal">Görevlendirilecek Personel Seçimi</button>       
            <div class="modal" id="personelSecModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button class="close" data-dismiss="modal">&times;</button>
                            <h4>Personel Seçimi</h4>
                        </div>
                        <div class="modal-body">
                            <p>Lütfen görevin atanacağı personelleri seçiniz.</p>    
                            
                            <table class="table">                                
                                <tr>
                                    <th>                                        
                                       Görev Ata
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.personelViewModels[0].ad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.personelViewModels[0].soyad)
                                    </th>                                             
                                    <th></th>
                                </tr>
                                @{ Model.gorevlendirmeViewModel.yonetici_id = Convert.ToInt32(Session["yoneticiID"]);}
                                @Html.HiddenFor(model => model.gorevlendirmeViewModel.yonetici_id)
                                @{ int i = 0;
                                    int girisYapanYoneticiID = Convert.ToInt32(Session["YoneticiID"]);}
                                @{ using(IsYonetimDBEntities dbModel = new IsYonetimDBEntities()){
                                        var girisYapanYonetici= dbModel.Yoneticis.Where(x => x.kullanici_id == girisYapanYoneticiID).FirstOrDefault();
                                        Model.gorevlendirmeViewModel.Yonetici = new Yonetici() {
                                            kullanici_id = girisYapanYonetici.kullanici_id, kullanici_adi = girisYapanYonetici.kullanici_adi,
                                            ad = girisYapanYonetici.ad, soyad = girisYapanYonetici.soyad,
                                            email = girisYapanYonetici.email, maas = girisYapanYonetici.maas
                                        };
                                    }
                                }
                                    @foreach (var personel in ViewBag.personelListesi)
                                {
                                        Model.personelViewModels.Add((IsYonetimSistemi.Models.Personel) personel);
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="PersonelIDs" value="@personel.kullanici_id"/>
                                            @*@Html.CheckBoxFor(model => model.personelViewModels[i].gorevChecked)*@

                                            @*@{ Model.gorevlendirmeViewModel.personel_id = personel.kullanici_id;}
                                            @Html.HiddenFor(model => model.gorevlendirmeViewModel.personel_id)*@
                                            </td>
    
                                            <td>
                                                @personel.ad
                                            </td>
    
                                            <td>
                                                @personel.soyad
                                            </td>
                                    </tr>
                                   i++;                                   
                                }
                            </table>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Görev Ata" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-success">@ViewBag.SuccessMessage</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-danger">@ViewBag.DuplicateMessage</label>
                </div>
            </div>
        </div>
        <br />

       
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


